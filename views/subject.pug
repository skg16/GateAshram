extends layout

block content

  .container

    div(style='text-align: center ; margin-top: 10% ; font-family: Belleza ; font-size:20px')
      h3 #{subjectInfo.subject}
      hr
      p #{subjectInfo.description}

    each info, i in subjectInfo.topics
      div(style='text-align: center ; margin-top: 10% ; font-family: Belleza ; font-size:20px')
        h3 #{info.topic}
        hr
        p #{info.desc}
        div(style='margin-left:40% ; margin-bottom: 10% ;margin-top: 10%')
          a(href='#')
            button.btn.btn-outline-primary(type='button') VIDEOS
          a(href='./'+subjectInfo.subject+'/'+info.topic+'/questions')
            button.btn.btn-outline-primary(type='button') QUESTIONS

    div
      a(href='/subjects')
        button.btn.btn-outline-primary(type='button') BACK

